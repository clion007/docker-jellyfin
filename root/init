#!/bin/sh
set -e

# create directories
mkdir -p \
    /config/log \
    /config/data/plugins/configurations \
    /config/data/transcodes \
    /config/cache \
    /data \
    /transcode \
    /media

# permissions
chown -R jellyfin:jellyfin \
    /config \
    /transcode
chmod -R 766 /config \
    /media

# first arg is `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- jellyfin "$@"
fi

# allow the container to be started with `--user`
if [ "$1" = 'jellyfin' -a "$(id -u)" = '0' ]; then
    exec su-exec jellyfin "$0" "$@"
fi

exec "$@"
